{
  "name": "craftcms/commerce-worldpay",
  "description": "Worldpay integration for Craft Commerce 4.0+",
  "type": "craft-plugin",
  "keywords": [
    "worldpay",
    "commerce",
    "craftcms",
    "omnipay",
    "yii2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Pixel & Tonic",
      "homepage": "https://pixelandtonic.com/"
    }
  ],
  "support": {
    "email": "support@craftcms.com",
    "issues": "https://github.com/craftcms/commerce-worldpay/issues?state=open",
    "source": "https://github.com/craftcms/commerce-worldpay",
    "docs": "https://github.com/craftcms/commerce-worldpay",
    "rss": "https://github.com/craftcms/commerce-worldpay/commits/master.atom"
  },
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.0.0-RC3",
    "craftcms/commerce": "^4.0.0-RC1",
    "craftcms/commerce-omnipay": "^4.0.0-RC1",
    "omnipay/worldpay": "^3.0.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "craft\\commerce\\worldpay\\": "src/"
    }
  },
  "scripts": {
    "phpstan": "phpstan --memory-limit=1G",
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix"
  },
  "extra": {
    "name": "Worldpay Online Payments for Craft Commerce",
    "handle": "commerce-worldpay"
  },
  "require-dev": {
    "craftcms/phpstan": "dev-main",
    "craftcms/ecs": "dev-main"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    },
    "platform": {
      "php": "8.0.2"
    }
  }
}
